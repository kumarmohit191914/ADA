#include<iostream>
#include<math.h>
using namespace std;
void power(float n)
{
	int ans;
	int p=2;
	ans=pow(n,p);
	cout<<"the answer is: "<<ans;
}
void power(float n,int p)
{
	int ans;
	ans=pow(n,p);
	cout<<"the answer is: "<<ans;
}
int main()
{
	int choice,p;
	float n;
	cout <<"1. for square any float integer : "<<endl;
	cout <<"2. for raising an integer power to a float value: "<<endl;
	cout << "enter choice: ";
	cin >>choice;
	if(choice==1)
	{
		cout<< "enter value: ";
		cin >> n;
		power(n);
	}
	else if(choice==2)
	{
		cout<< "enter value: ";
		cin >> n;
		cout<< "enter power: ";
		cin >>p;
		power(n,p);
	}
	else
	{
		cout<<"wrong choice input.";
	}
}
